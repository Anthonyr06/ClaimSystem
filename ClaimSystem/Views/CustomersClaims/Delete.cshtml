@model ClaimSystem.Models.Claim

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Claim</h4>
    <hr />
	<dl class="dl-horizontal">

		<dt>
			@Html.DisplayNameFor(model => model.Dish)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Dish)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.Desc)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Desc)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.ClaimState)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.ClaimState.Desc)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.ClaimType)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.ClaimType.Desc)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.Employee)
		</dt>

		<dd>

			@if (Model.Employee == null)
			{
				<span>Por Asignar</span>
			}
			else
			{
				@Model.Employee.FullName<span> - </span>@Model.Employee.Cedula
			}
		</dd>


		<dt>
			@Html.DisplayNameFor(model => model.StartDate)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.StartDate)
		</dd>

		@if (Model.SolutionDate != null)
		{
			<dt>
				@Html.DisplayNameFor(model => model.SolutionDate)
			</dt>

			<dd>
				@Html.DisplayFor(model => model.SolutionDate)
			</dd>
		}

		@if (!string.IsNullOrEmpty(Model.Solution))
		{
			<dt>
				@Html.DisplayNameFor(model => model.Solution)
			</dt>

			<dd>
				@Html.DisplayFor(model => model.Solution)
			</dd>
		}

	</dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
