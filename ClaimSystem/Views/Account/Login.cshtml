@model ClaimSystem.Models.Employee

@{
	ViewBag.Title = "Iniciar Sesion";
}
@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="row">
		<div class="col-6 offset-3">

			<div class="card text-center my-5">
				<div class="card-header bg-primary text-white">
					<h3>@ViewBag.Title</h3>
				</div>
				<div class="card-body">
					@Html.ValidationSummary(true, "", new { @class = "text-danger" })
					<div class="mb-3">
						@Html.LabelFor(m => m.Email, new { @class = "form-label" })
						@Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
						@Html.ValidationMessageFor(m => m.Email)
					</div>
					<div class="mb-3">
						@Html.LabelFor(m => m.Password, new { @class = "form-label" })
						@Html.PasswordFor(m => m.Password, new { @class = "form-control" })
						@Html.ValidationMessageFor(m => m.Password)
					</div>
					<div class="mb-3">
						<button type="submit" class="btn btn-primary rounded-pill ">Iniciar Sesión</button>
					</div>
					@*<div class="mb-3">
						@Html.ActionLink("Nuevo empleado", "Register", null, new { @class = "card-link small " })
					</div>*@

				</div>
			</div>
		</div>
	</div>

}
